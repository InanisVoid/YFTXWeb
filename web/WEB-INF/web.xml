        <servlet-class>userInfo.WXTest</servlet-class>
    </servlet>


    <!-- servlet的映射配置 -->
    <servlet-mapping>
        <!-- servlet的内部名称，一定要和上面的内部名称保持一致！！ -->
        <servlet-name>SubmitUserInfo</servlet-name>
        <!-- servlet的映射路径（访问servlet的名称） -->
        <url-pattern>/submitUserInfo</url-pattern>
    </servlet-mapping>

