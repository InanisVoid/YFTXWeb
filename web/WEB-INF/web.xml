<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>SubmitUserInfo</servlet-name>
        <!-- servlet的类全名： 包名+简单类名 -->
        <servlet-class>userInfo.SubmitUserInfo</servlet-class>
    </servlet>



    <servlet>
        <servlet-name>GetUserInfo</servlet-name>
        <!-- servlet的类全名： 包名+简单类名 -->
        <servlet-class>userInfo.GetUserInfo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WXTest</servlet-name>
        <!-- servlet的类全名： 包名+简单类名 -->
        <servlet-class>userInfo.WXTest</servlet-class>
    </servlet>


    <!-- servlet的映射配置 -->
    <servlet-mapping>
        <!-- servlet的内部名称，一定要和上面的内部名称保持一致！！ -->
        <servlet-name>SubmitUserInfo</servlet-name>
        <!-- servlet的映射路径（访问servlet的名称） -->
        <url-pattern>/submitUserInfo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetUserInfo</servlet-name>
        <!-- servlet的映射路径（访问servlet的名称） -->
        <url-pattern>/getresult</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WXTest</servlet-name>
        <!-- servlet的映射路径（访问servlet的名称） -->
        <url-pattern>/WXTest</url-pattern>
    </servlet-mapping>



</web-app>